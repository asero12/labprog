#include <stdio.h>
#include <stdlib.h>
#include <string.h>

struct Dict {
	char palIngles  [50];
	char palEspanol [50];
}
typeded struct Dict tipoDict;

void guardarComoBinario (char *nombreArchivoText, char *nombreArchivoBin) {
	FILE *manejadorTxt;
	FILE *manejadorBin;

	char lineaTexto [200];
	char palInglesTmp [50];
	char palEspanolTmp [50];

	manejadorTxt = fopen (nombreArchivoText, "r"); 
	manejadorBin = fopen (nombreArchivoText, "wb"); 
	
	while (!feof (manejadorTxt) {
		fgets (lineaTexto, 150, manejadorTxt);
		palInglesTmp  = strtok (lineaTexto, " : ");
		palEspanolTmp = strtok (NULL, " : ");

		printf ("<%s>:<%s>\n", palInglesTmp, palEspanolTmp);
	}







int main (int argc, char * argv[]){
	guardarComoBinario ("palabras.txt", "palabras.bin");
	return 0;
}
