#include <stdio.h>
void main()
{
	FILE* fichero;
	fichero = fopen("prueba.txt", "wt");
	fputs("Esto es una línea\n", fichero);
	fputs("Esto es otra", fichero);
	fputs(" y esto es continuación de la anterior\n", fichero);
	fprintf (fichero, "Hola\n");
	fprintf (fichero, "%d, %c, %s\n", 343, 'c', "Adios");

}
